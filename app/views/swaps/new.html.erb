<div class="bg-gradient-to-tr from-blue-100 via-blue-300 to-blue-500 min-h-screen">

  <div class="container">
    <div class="card-body font-bold text-center ">
    <h1>Please select the book you want to swap</h1>
    </div>

    <div class="card-body ">
      <%= simple_form_for([@book, @swap]) do |f| %>
        <%= f.input :book_id, collection: @mybooks %>
        <%= f.submit "Send" %>
      <% end %>
    </div>
  </div>

</div>
