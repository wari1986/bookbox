<div data-books-target="results" class="flex justify-center grid gap-4 2xl:grid-cols-3 xl:grid-cols-2 mx-auto lg:grid-col-2 md:grid-cols-1 sm:max-w-sm sm:mx-auto lg:max-w-full">
        <% @books.each_with_index do |book, index| %>
        <div class="flex flex-col md:flex-row md:max-w-xl rounded-lg bg-white shadow-lg">
          <div class="flex justify-center">
          <%= link_to book_path(book.id) do %>
            <%= image_tag book.cover, class: "w-60 h-full rounded-lg" %>
          <% end %>
          </div>
          <div class="relative w-1/2 my-4 mx-4 leading-tight md:p-1">
            <h2 class="text-gray-600"><%=book.author %></h2>
            <h1 class="text-2xl bold-700"><%=link_to book.title.truncate(17), book_path(book) %></h1>
            <%# <h2 class="text-xl bold"><%=book.average_rating %></h2>
              <h2 class="text-gray-600 py-1 font-bold"><%=book.language.upcase %></h2>
              <h2 class="text-gray-600 py-1 font-bold"><%=book.condition %></h2>
            <div class="inline-block align-bottom">
              <button
                  class="absolute bottom-0 right-0 px-6 py-2.5 my-4 text-indigo-400 bg-white border border-indigo-400 font-medium text-xs leading-tight uppercase rounded-full shadow-md hover:bg-indigo-400 hover:text-white hover:shadow-lg focus:bg-blue-700 focus:shadow-lg focus:outline-none focus:ring-0 active:bg-blue-800 active:shadow-lg transition duration-150 ease-in-out"><%=link_to "Swap it!", new_book_swap_path(book) %>
              </button>
              <%= link_to user_path(User.find(UserBookRelationship.find_by(owned: true, book_id: book.id).user_id)) do %>
                <% previous_user = User.find(UserBookRelationship.find_by(owned: true, book_id: book.id).user_id) %>
               <%= image_tag previous_user.profile_picture, class: "absolute bottom-5 left-0 w-7 rounded-full bg-neutral-500" %>
              <% end %>
            </div>
          </div>
        </div>

        <% end %>

</div>
