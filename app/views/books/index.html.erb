<div class="index-container my-12 mx-auto px-4 md:px-12 bg-white">
  <div class="w-1/2 mx-auto">
    <%= form_tag books_path, method: :get do %>
    <%= text_field_tag :query,
      params[:query],
    class: "form-control",
    placeholder: "Find a book"
    %>
    <%= submit_tag "Search", class: "" %>
    <% end %>
  </div>
  <div class="flex my-16">
    <div class="info w-1/4 text-lg bg-white">
      <button class="flex justify-center m-8 px-8 py-2 rounded text-white bold bg-indigo-400 mx-auto" id="create_button"><%=link_to "Add a Book", new_book_path %></button>
      <div class="m-8 py-8">
        <h1 class='text-xl my-4'>Categories</h1>
        <ul>
          <li>Category Name</li>
          <li>Category Name</li>
          <li>Category Name</li>
          <li>Category Name</li>
        </ul>
      </div>
      <div class="m-8 py-8">
        <h1 class='text-xl my-4'>Rating</h1>
        <ul>
          <li>stars</li>
          <li>stars</li>
          <li>stars</li>
          <li>stars</li>
        </ul>
      </div>
    </div>
    <div class="w-3/4">
      <div class="grid gap-8 lg:grid-cols-4 md:grid-cols-2 sm:grid-cols-1">
        <% @books.each_with_index do |book, index| %>
        <div class=" overflow-hidden transition-shadow duration-500 bg-white rounded shadow-sm">
          <div class="my-8 min-h-64">
            <img class='object-cover mx-auto rounded w-2/3 flex items-center' src="<%= book.cover %>" alt="book cover">
            <div class="w-2/3 my-auto mx-auto leading-tight md:p-4">
              <p class="text-gray-600"><%=book.author %></p>
              <h1 class="text-2xl bold-700 "><%=link_to book.title, book_path(book) %></h1>
              <%# <p class="text-xl bold"><%=book.average_rating %></p>
              <p class="text-gray-600 py-4"><%=book.description.truncate_words(25) %></p>
              <% unless current_user.user_book_relationships == [] %>
              <p class="text-gray-600 py-4"> <%= @index_distances[index] %> km</p>
              <% end %>
              <button class="w-full m-8 px-8 py-2 rounded text-indigo-600 bold bg-white mx-auto border-solid border-2 border-indigo-600" id="create_button"><%=link_to "Get this book!", new_book_swap_path(book) %></button>
            </div>
            </div>
        </div>
        <% end %>
      </div>
    </div>
</div>
