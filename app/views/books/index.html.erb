<div class="index-container my-12 mx-auto px-4 md:px-12 bg-white">
  <div class="w-1/2 mx-auto">
    <%= form_tag books_path, method: :get do %>
    <%= text_field_tag :query,
      params[:query],
    class: "form-control",
    placeholder: "Find a book"
    %>
    <%= submit_tag "Search", class: "" %>
    <% end %>
  </div>
  <div class="flex my-16">
    <div class="info w-1/4 text-lg bg-white ">
      <button class="flex justify-center m-8 px-8 py-2 rounded text-white bold bg-indigo-400 mx-auto" id="create_button"><%=link_to "Add a Book", new_book_path %></button>
      <div class="m-8 py-8">
        <h1 class='text-xl my-4'>Categories</h1>
        <ul>
          <li>Category Name</li>
          <li>Category Name</li>
          <li>Category Name</li>
          <li>Category Name</li>
        </ul>
      </div>
      <div class="m-8 py-8">
        <h1 class='text-xl my-4'>Rating</h1>
        <ul>
          <li>stars</li>
          <li>stars</li>
          <li>stars</li>
          <li>stars</li>
        </ul>
      </div>
    </div>
    <div class="w-3/4 sm:w-full ">
      <div class="px-4 py-16 mx-auto sm:max-w-xl md:max-w-full lg:max-w-screen-xl md:px-4 lg:px-8 lg:py-20">
        <div class="grid gap-8 lg:grid-cols-3 sm:max-w-sm sm:mx-auto lg:max-w-full">
            <% @books.each do |book| %>
          <div class="overflow-hidden transition-shadow duration-300 bg-white rounded shadow-sm">
            <div class="p-5 border border-t-0 ">
              <img class="object-cover w-full" src="<%= book.cover %>" alt="book cover">
              <div class="p-5 border border-t-0">
                <p class="mb-3 text-xs font-semibold tracking-wide uppercase"><%=book.author %></p>
                <p class="inline-block mb-3 text-2xl font-bold leading-5 transition-colors duration-200 hover:text-deep-purple-accent-700"><%=link_to book.title, book_path(book) %></p>
                <%# <h2 class="text-xl bold"><%=book.average_rating %></h2>
                <p class="mb-2 text-gray-700"><%=book.description.truncate_words(15) %></p>
                <button class="inline-flex items-center font-semibold transition-colors duration-200 text-deep-purple-accent-400 hover:text-deep-purple-800"><%=link_to "Get this book!", new_book_swap_path(book) %></button>
              </div>
            </div>
          </div>
            <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
