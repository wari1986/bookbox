<div class="container">
  <div class="row">
    <div class="book-container col-sm">
      <div class="card" style="width: 20rem;">
        <%# <img class="card-img-top" src="..." alt="Card image cap"> %>
        <%# <% if @book.cover.attached? %>
          <%# <%= cl_image_tag @book.cover.key, crop: :fill %>
        <%# <% end %>
        <div class="card-body">
          <img src="<%=@book.cover %>" alt="">
          <h5 class="card-title"><%=@book.title %></h5>
          <h5 class="card-title"><%=@book.author %></h5>
          <%# <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p> %>
          <div class="button-container">
            <button class="bg-indigo-400 text-white"><%=link_to "+ Make an offer", book_path(@book) %></button>
            <button class="bg-indigo-400 text-white"><%=link_to "Add a review", new_book_review_path(@book) %></button>
          </div>
        </div>
      </div>
    </div>

    <div class="container">
      <% @book.reviews.each do |review|%>
      <div>
        <h1><%= review.title %></h1>
        <p><%= review.content %></p>
        <p><%= review.stars %></p>
      </div>
      <% end  %>
    </div>

    <div class="map-container col-sm">
      <div id="map"
        style="width: 100%; height: 100%;"
        data-markers="<%= @markers.to_json %>"
        data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
    </div>
  </div>

  </div>
</div>
